<div class='container devise-form'>

  <div class="row">

    <%= form_for(resource, html: { class: 'col s12 m12 l8 offset-l2' }, as: resource_name, url: session_path(resource_name)) do |f| %>

      <h3 class='center light-blue-text text-lighten-3'>Iniciar Sesi√≥n</h3>

      <div class="row">
        <div class="input-field col s12">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true %>
        </div>

        <div class="input-field col s12">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="input-field col s12">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>
      </div>

      <div class="row actions">
        <div class="input-field col s12">
          <%= f.submit "Ingresar", class: 'waves-effect btn light-blue lighten-3' %>
        </div>
      </div>

      <%= render "users/shared/links" %>

    <% end %>
    </div>
</div>
