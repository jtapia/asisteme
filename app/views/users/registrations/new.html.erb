<div class='container devise-form'>

  <div class="row">
    <%= form_for(resource, html: { class: 'col s12 m12 l8 offset-l2' }, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <%= set_user_registration_type_session %>

      <%= format_user_form_title %>

      <%= devise_error_messages! %>

      <div class="row">

        <div class="input-field col s12 m6">
          <%= f.label 'Nombre *', class: "#{render_error_message(resource, 'first_name')}" %>
          <br />
          <%= f.text_field :first_name, autofocus: true, class: "#{render_error_message(resource, 'first_name')}" %>
        </div>

        <div class="input-field col s12 m6">
          <%= f.label 'Apellidos *', class: "#{render_error_message(resource, 'last_name')}" %><br />
          <%= f.text_field :last_name, autofocus: true, class: "#{render_error_message(resource, 'last_name')}" %>
        </div>

        <div class="input-field col s12">
          <%= f.label 'Telefono *', class: "#{render_error_message(resource, 'phone')}" %>
          <br />
          <%= f.text_field :phone, autofocus: true, class: "#{render_error_message(resource, 'phone')}" %>
        </div>

        <div class="input-field col s12">
          <%= f.label 'Correo *', class: "#{render_error_message(resource, 'email')}" %>
          <br />
          <%= f.email_field :email, class: "#{render_error_message(resource, 'email')}" %>
        </div>

        <div class="input-field col s12">
          <%= f.label 'password *', class: "#{render_error_message(resource, 'password')}" %>
          <%= f.password_field :password, class: "#{render_error_message(resource, 'password')}" %>
        </div>

        <div class="input-field col s12">
          <%= f.label 'confirmacion de contraseÃ±a', class: "#{render_error_message(resource, 'password_confirmation')}" %>
          <br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "#{render_error_message(resource, 'password_confirmation')}" %>
        </div>
      </div>

      <div class="row actions">
        <div class="input-field col s12">
          <%= f.submit "Registrar cuenta", class: "waves-effect btn light-blue darken-4" %>
        </div>
      </div>

      <%= render "users/shared/links" %>

    <% end %>
  </div>
</div>
