<div class='container devise-form'>

  <div class="row">
    <%= form_for(resource, html: { class: 'col s12 m12 l8 offset-l2' }, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <%= set_user_registration_type_session %>

      <%= format_user_form_title %>

      <%= devise_error_messages! %>

      <div class="row">

        <div class="input-field col s12">
          <%= f.label :correo %><br />
          <%= f.email_field :email, autofocus: true %>
        </div>

        <div class="input-field col s12">
          <%= f.label :contraseña %>
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <div class="input-field col s12">
          <%= f.label 'confirmacion de contraseña' %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>
      </div>

      <div class="row actions">
        <div class="input-field col s12">
          <%= f.submit "Registrar cuenta", class: 'waves-effect btn light-blue lighten-3' %>
        </div>
      </div>

      <%= render "users/shared/links" %>

    <% end %>
  </div>
</div>
